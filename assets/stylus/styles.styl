            border-radius 4px
            cursor pointer
            text-align center
            display block
            i
                font-size 25px
                color $blue
body
	width 100%
	float left
	padding 0
	margin 0
	top 0
	left 0
        a
            text-decoration:  none;
            color white
#header
    width 100%
    float left
    z-index 999
    position absolute
    top 0
    left 0
    //header mobile
    @media(max-width 768px)
        width 70%
        float left
        position fixed
        top 0
        left -500px
        height 100vh
        background-color darken($blue, 50%)
        box-shadow 0px 0px 10px black
        transition all 500ms ease-in-out   
    .rollback
        display none
        transition all 250ms ease-in-out
        @media(max-width 768px)
            display block
            width 43%
            position absolute
            top 0
            left 100%
            height 100vh
            background-color transparent
    .switch-header
        display none
        @media(max-width 768px)
            z-index 999 !important
            position absolute
            top 13px
            left 10px
            width 35px
            height 35px
            padding 5px
            border solid 1px $blue
            border-radius 4px
            cursor pointer
            text-align center
            display block
            i
                font-size 25px
                color $blue
   
    .header-st-row
        width 100%
        float left
        line-height 30px
        font-family: $font1
        padding 0% 5%
        background-color: darken($blue, 50%)
        @media(max-width 768px)
            padding 1% !important
            position absolute
            bottom 0 
            left 0
            background-color transparent
            line-height .9em
        .st-divider
            width 33.333%
            float left
            text-align center
            @media(max-width 768px)
                width 100%
            span
                font-size 0.9em
                color white
                margin 1%
                @media(max-width 768px)
                    margin 0
                    font-size .7em
            a
                text-decoration none
                font-size 0.9em
                color white
                margin 1%
                @media(max-width 768px)
                    font-size .7em
                    margin 0
            i
                color white
                font-size 1em
                margin 1%
                @media(max-width 768px)
                    margin 0
                    font-size .7em
    .header-bar
        width 100%
        float left
        padding 0% 5%
        background-color rgba(255, 255, 255, 0.5);
        box-shadow 1px 1px 10px black
        z-index 999
        transition all 250ms ease-in-out
        @media(max-width 768px)
            padding 70px 0 0 0 !important
            box-shadow none
            height 85vh
            background-color transparent            
        .header-logo
            width 12%
            float left
            @media(max-width 768px)
                width 100%
                float left
                position absolute
                top 0
                left 0
                height 61px
                background-color white
                text-align center
                box-shadow 0px 0px 5px black
            .logo-img
                width 100%
                float left
                padding 10%
                @media(max-width 768px)
                    display none
            .mobile-logo
                display none
                @media(max-width 768px)
                    display block
                    width 120px
                    margin 0% auto

            .switch-header 
                display none
        .header-menu
            width 88%
            float left
            text-align center
            @media(max-width 768px)
                width 100%
                padding 5% 0%
                text-align left
            nav
                width 100%
                float left
                padding 2.5% 0% 0% 0%
                @media(max-width 768px)
                    padding 0%
                ul
                    list-style none
                    @media(max-width 768px)
                        margin 0%
                        padding 0%
                    li
                        display inline-block
                        margin 0% 25px
                        transition all 200ms
                        padding 0
                        text-align center
                        @media(max-width 768px)
                            display block !important
                            margin 0%
                            padding 15px
                            text-align left
                            width 100%
                            float left
                            &:hover, &:focus
                                background-color white
                                .page-scroll
                                    color darken($blue, 50%)!important
                        .page-scroll
                            text-decoration none
                            color darken($red, 20%)
                            font-family $font2
                            text-transform uppercase
                            font-size 1.2em
                            transition all 500ms
                            font-weight: 600
                            padding 1%
                            position relative
                            @media(max-width 768px)
                                color white !important
                                padding 5% 50% 5% 5%
                            &:after
                                content: " "
                                width 50px
                                height 2px
                                background-color transparent
                                bottom 0
                                left 1px
                                position absolute
                                transition all 500ms
                                
                        .active
                            color darken($blue, 50%)
                            @media(max-width 768px)
                                color white
                            
                            &:after
                                background-color darken($blue, 50%)
                                @media(max-width 768px)
                                    display none

    .header-bar-fixed
        opacity 1
        @media(min-width 769px)
            position fixed
            z-index 999
            top 0
            left 0
            background-color white
#home
    width 100%
    float left
    .slider-container
        width 100%
        float left
        .slider
            width 100%
            float left
            .slider1
