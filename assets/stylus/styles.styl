        z-index 900
        position fixed
        width 100%
        background-color white
        height 61px
        top 0
        left 0
        box-shadow 0px 0px 5px black 
        text-align center
        .page-scroll
            width 120px
            float left 
            text-align center
            display block
            img
                width 120px
                height auto
                float left 
                          
        .switch-header
            z-index 901
            position fixed
            top 13px
            left 10px
