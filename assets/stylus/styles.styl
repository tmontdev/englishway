            padding 1% !important
        .method-content
            width 100%
            float left
            .method-presentation
                width 100%
                float left
                text-align center
                h2
                    font-family $font1
                    font-size 2.2em
                    color rgba(0, 0, 0, .7)
                    @media(max-width 768px)
                        font-size 1.5em
                        text-align center
                    span
