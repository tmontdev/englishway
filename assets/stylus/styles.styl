                height 2em
                border-radius 50%
                font-size 2em
                padding .55em
            .prev
                color white
                float left
                box-shadow 0px 0px 5px darken($red, 50%)
            .next
                float right
                color white
                box-shadow 0px 0px 5px darken($blue, 50%)
#school
    width 100%
    float left
    padding 0% 5% 5% 5%
    border-bottom solid 1px grey
    @media(max-width 768px)
        padding 0 !important
        margin 0 !important
    .school-content
        width 100%
        float left
        padding 0
        margin 0
        h2
            font-family $font1
            padding-top 2%
            color #555555
            font-size 2.2em
            @media(max-width 768px)
                font-size 1.5em
                text-align center
        span
            color $red
            margin 0
        .school-divider
            width 33.333%
            float left
            padding 1%
            text-align center
            transition all 500ms
            font-weight: 600
            @media(max-width 768px)
                width 100% !important
                margin 3% 0%
            .divider-presentation
                width 100%
                float left
                .fa
                    font-size 3em
                    padding 1em
                    border-radius 50%
                    border solid 2px $red
                    color $red
                h3
                    font-family: $font1
                    color $red
                    foize 1.7em
                    padding 1%
            .divider-content
                width 100%
                float left
                font-family $font2
                color #959595
                font-weight: 300
                .divider-link
                    width 100%
                    float left
                    margin-top 5%
                    a
                        padding 0.2em 1em
                        color $red
                        border solid 2px $red
                        text-decoration none
                        font-family $font1
                        transition all 500ms
                        border-radius 4px
                        span
                            margin 0% 1%
                            transition 
                        &:hover
                            color white
                            background-color $red
                            box-shadow 1px 1px 5px $red
                            span
                                color white
                .modal  /* The Modal (background) */
                    display none /* Hidden by default */
                    position fixed /* Stay in place */
                    z-index 1 /* Sit on top */
                    left 0
                    top 0
                    width 100% /* Full width */
                    height 100% /* Full height */
                    overflow auto /* Enable scroll if needed */
                    background-color rgb(0,0,0) /* Fallback color */
                    background-color rgba(0,0,0,0.4) /* Black w/ opacity */
                    .modal-content /* Modal Content/Box */
                        background-color #fefefe
                        margin 15% auto /* 15% from the top and centered */
                        padding 20px
                        border 1px solid #888
                        font-family $font1
                        width 80% /* Could be more or less, depending on screen size */
                        @media(max-width 768px)
                            font-size 14px
                            padding 5px 
                            margin 75px auto 10px auto
                            .horizontal-large
                                width 100%
                                float left                            
                        .close /* The Close Button */
                            color #aaa
                            float: right
                            font-size 28px
                            font-weight bold
                            &:hover, &:focus
                                color black
                                text-decoration none
                                cursor pointer
                        h1
                            color red
                            font-family $font2
                            @media(max-width 768px)
                                font-size 14px
#method
    width 100%
    float left
    background-image: url(../img/parallax5.jpg)
    background-size cover
    background-position center top
    @media(max-width 768px)
        background-position center center
